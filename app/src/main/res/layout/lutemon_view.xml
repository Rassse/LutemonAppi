<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="135dp"
    android:layout_marginTop="7dp"
    android:background="#9C27B0"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="50dp"
        android:layout_height="100dp"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="7dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nimi"
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewAttack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hyökkäys"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textViewDefence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Puolustus"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textViewHealth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Elämät"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textViewExperience"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kokemus"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textViewLosses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Häviöt"
            android:textSize="14sp" />
    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>